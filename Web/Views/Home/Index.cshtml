@{
    ViewBag.Title = "Home Page";
}

<input type="file" id="fileInput" onchange="fileChange(event)" accept=".xls,.xlsx" class="input-file">
<div id="dropZone" class="drop-zone" onclick="dropZoneOnClick()">Загрузите Excel-файл</div>

<div style="margin-top: 10px">
    <div><h4>Выберите колонку</h4></div>
    <select id="column" class="column-selector form-control"></select>
    <div @*class="btn-group"*@ style="margin-top: 2px;">
        <button id="btnProcessFile" type="button" class="btn btn-primary" disabled="disabled" onclick="ProcessFile()">Начать обработку</button>
    </div>
</div>

<div style="margin-top: 10px">
    <table>
        <tr style="text-align: center">
            <td class="first-column">
                <h4>Корректировка наименования</h4>
            </td>   
            <td class="second-column"></td>
        </tr>

        <tr>
            <td class="first-column" style="text-align: center;">
                <span>Варианты наименований </span>
                <span id="variantsCount" class="badge">0</span>
                <span>из </span>
                <span id="variantsTotalCount" class="badge">0</span>
            </td>
            <td class="second-column">
                <h4 style="text-align: center;">Базовое наименование</h4>
            </td>
        </tr>

        <tr>
            <td class="first-column">
                <select id="variantsChoose" class="variants-choose form-control" style="display: inline-block" size="10" onclick="VariantClick(event)"></select>
            </td>
            <td class="second-column" style="width: 300px; vertical-align: top; padding: 0 0 0 10px;">
                <input id="baseNameInp" list="possibleBaseNames" type="search" placeholder="Выберите из списка или введите подходящий вариант" style="width: 100%" />
                <datalist id="possibleBaseNames"></datalist>

                <div><h4>Ранее базовым считалось</h4></div>
                <div style="margin: 10px 0; height: 20px"><a href="#" id="baseNameLnk" onclick="BaseNameClick(event)"></a></div>
                <div>Кликните на подходящее наименование, чтобы обозначить его за базовое. Либо выберите его из списка слева и нажмите кнопку «Добавить»</div>
            </td>
        </tr>

        <tr>
            <td colspan="2">
                <button type="button" class="btn btn-primary" disabled="disabled" onclick="Previous()" id="btnPrevious">&laquo; Предыдущий</button>
                <button type="button" class="btn btn-primary" disabled="disabled" onclick="Next()" id="btnNext">Следующий &raquo;</button>

                <button type="button" class="btn btn-primary" disabled="disabled" onclick="Exclude()" id="btnExclude">Исключить</button>
                <button type="button" class="btn btn-primary" disabled="disabled" onclick="AddValue()" id="btnAddValue">Добавить</button>
                <button type="button" class="btn btn-primary" disabled="disabled" onclick="GetPrepareResult()" id="btnPrepareResult">Посмотреть результат</button>
                <a href="~/Home/DownloadFile" target="_blank" class="btn btn-primary disabled" role="button" id="btnDownLoadFile">Скачать</a>
            </td>
        </tr>
        
    </table>
</div>

<div @*class="footer-log"*@ style="margin-top: 10px;">
    <div id="log" class="log">
        <div><h4>Описание процесса</h4></div>
    </div>
</div>

@*Индикатор загрузки*@
<div class="overlap" id="overlapLoader">
    <div class="vertical-center">
        <div class="loader"></div>
    </div>
</div>

@*Окно предварительного результата*@
<div id="prepareResults" class="modal fade" role="dialog">
    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Результат замены</h4>
            </div>
            <div class="modal-body">
                <select id="prepareResultsList" class="variants-choose form-control" style="display: inline-block" size="10"></select>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Закрыть</button>
            </div>
        </div>

    </div>
</div>


@section scripts
    {
    <script src="~/Scripts/App.js"></script>
}